rm -rf app
mkdir app
cd app
cp /etc/jenkins/workspace/Build_jenkins/target/addressbook.war .
cat << 'EOF' > Dockerfile
FROM tomcat
ADD addressbook.war /usr/local/tomcat/webapps
CMD "catalina.sh" "run"
EOF

sudo docker build . -t rdsharma971994/tcsapp:$BUILD_NUMBER
sudo docker push rdsharma971994/tcsapp:$BUILD_NUMBER
sudo docker run -itd --name myjenkinswebApp$BUILD_NUMBER -p 80:8080 rdsharma971994/tcsapp:$BUILD_NUMBER
